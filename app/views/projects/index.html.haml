.page-header
  = link_to new_project_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Project
  %h1 Listing projects

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Client
        %th Name
        %th Deployments
        %th Trello project
        %th Toggl project
        %th Google drive url
        %th
        %th
        %th

    %tbody
      - @projects.each do |project|
        %tr
          %td= project.client.name
          %td= link_to project.name, "http://github.com/DevGarden/#{project.name}", target: "_blank"
          %td
            -project.deployments.each do |d| 
              =link_to d.phase.to_s, d.build_url, class: "btn btn-sm #{d.staging? ? 'btn-warning' : 'btn-success'}", target: "_blank"
          %td= project.trello_project_id
          %td= project.toggl_project_id
          %td= project.google_drive_url
          %td= link_to 'Show', project
          %td= link_to 'Edit', edit_project_path(project)
          %td= link_to 'Destroy', project, data: { confirm: 'Are you sure?' }, method: :delete
