.modal-dialog.modal-dialog-portfolio
  .modal-content.modal-content-portfolio
    .modal-header
    .modal-body
      .container

        %div.row.portfolio-row
          .col-md-1.col-xs-3.back-img{"data-dismiss" => "modal", :type => "button"}
            = image_tag('back-btn.png', :class => "back-btn img-responsive")
          .col-md-11.col-xs-9.company-div.title
            = image_tag 'traclogo.png', :class => 'company-img img-responsive', :style => "height: 105px"


        %div.row.details
          %div.col-md-6.div.col-xs-12.details-text

            %h4.headings trac team
            %p.paragraphs

            %h4.headings project overview
            %p.paragraphs USTAR needed to improve how it supports the commercialization of technologies

            %h4.headings work
            %p.paragraphs Portfolio commercialization management system and streamlined business processes

            %h4.headings services
            %p.paragraphs Strategy, Process Redesign <br> Application Design & Development <br> Training, Change Management

            %h4.headings question we helped solve
            %p.paragraphs How to streamline the grant award process, how to improve selection of mentoring of successful technology companies, how to build a technology commercialization ecosystem in Utah.

          %div.col-md-6.col-xs-12.details-gallery
            #myCarousel.carousel.slide{"data-ride" => "carousel"}
              / Indicators
              %ol.carousel-indicators
                %li.active{"data-slide-to" => "0", "data-target" => "#myCarousel"}
                %li{"data-slide-to" => "1", "data-target" => "#myCarousel"}
                %li{"data-slide-to" => "2", "data-target" => "#myCarousel"}
                %li{"data-slide-to" => "3", "data-target" => "#myCarousel"}
              / Wrapper for slides
              .carousel-inner{:role => "listbox"}
                .item.active
                  = image_tag 'DevGarden_Text.png'
                .item
                  = image_tag 'impactmanagement.png'
                .item
                  = image_tag 'hamstertest.jpeg'
                .item
                  = image_tag 'gnomelee.png'
              / Left and right controls
              %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel", :role => "button"}
                %span.glyphicon.glyphicon-chevron-left.black{"aria-hidden" => "true"}
                %span.sr-only Previous
              %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel", :role => "button"}
                %span.glyphicon.glyphicon-chevron-right.black{"aria-hidden" => "true"}
                %span.sr-only Next

    .modal-footer
