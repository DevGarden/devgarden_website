    
%div.site-wrapper.top

  %div.site-wrapper-inner
    

    %div.cover-container
      = render 'layouts/messages'

      %div.inner.cover.center
        %h1.cover-heading.space Welcome to DevGarden.
        
        %p.lead 
          =link_to 'Sign in', "#sign-in", :class => 'btn btn-lg sign-in btn-warning', "data-toggle" => "modal"
    %div{:class => 'modal fade', :id => 'sign-in'}
      %div.modal-dialog
        %div.modal-content
          %div.modal-header
            %button{:class => 'close', 'data-dismiss' => 'modal', "aria-label" => "Close"} &times;
              
            %div.modal-body
              = render 'layouts/signin'




